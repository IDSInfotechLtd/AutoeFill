        <activity
            android:name="govt.opendataapp.SettingsScreenActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="govt.opendataapp.UserProfileActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
